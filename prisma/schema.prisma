generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ClientesMJC{
  cl_documento Int @id @unique
  cl_nombre String @db.VarChar(50)
  cl_direccion String @db.VarChar(50)
  cl_telefono String @db.VarChar(20)
  cl_correo String @db.VarChar(30)
  factura FacturasMJC @relation(fields: [facturaID],references: [fac_numero])
  facturaID Int
}

model VendedoresMJC{
  venUsuario Int @id 
  venContrase√±a String
  factura FacturasMJC @relation(fields: [factura_id],references: [fac_numero])
  factura_id Int
}

model ProductosMJC{
  pro_codigo Int @id @unique
  pro_descripcion String @db.Text
  pro_valor Int 
  pro_cantidad Int 
  fac_detalle FacturaDetalleMJC @relation(fields: [facd_id],references: [facd_numero])
  facd_id Int
}

model FacturasMJC{
  fac_numero Int @id @unique @default(autoincrement())
  fac_fecha DateTime 
  fac_valorTotal Int
  fac_cliente ClientesMJC[]
  fac_vendedor VendedoresMJC[]
}

model FacturaDetalleMJC{
  facd_numero Int @id
  facd_cantidad Int
  facd_producto ProductosMJC[]
}